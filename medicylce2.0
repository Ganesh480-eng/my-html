    <script>
        const availableMedicines = [
            {
                name: "Paracetamol",
                quantity: "100 tablets",
                expiry: "2026-06-30",
                location: "New York",
                description: "Pain reliever and fever reducer, widely used for mild to moderate pain."
            },
            {
                name: "Ibuprofen",
                quantity: "50 tablets",
                expiry: "2025-12-31",
                location: "Chicago",
                description: "Nonsteroidal anti-inflammatory drug for pain and inflammation."
            },
            {
                name: "Amoxicillin",
                quantity: "30 capsules",
                expiry: "2026-03-15",
                location: "Los Angeles",
                description: "Antibiotic used to treat bacterial infections."
            },
            {
                name: "Metformin",
                quantity: "60 tablets",
                expiry: "2025-11-30",
                location: "Houston",
                description: "Medication for managing type 2 diabetes."
            }
        ];

        document.addEventListener('DOMContentLoaded', () => {
            // Navigation scroll effect
            window.addEventListener('scroll', () => {
                const nav = document.querySelector('nav');
                if (window.scrollY > 50) {
                    nav.classList.add('scrolled');
                } else {
                    nav.classList.remove('scrolled');
                }
            });

            // Counter animation
            const counters = document.querySelectorAll('.stat-card');
            const speed = 200;

            const animateCounters = () => {
                counters.forEach(counter => {
                    const updateCount = () => {
                        const target = +counter.getAttribute('data-target');
                        const count = +counter.querySelector('.stat-number').innerText.replace('+', '');
                        const increment = target / speed;

                        if (count < target) {
                            counter.querySelector('.stat-number').innerText = Math.ceil(count + increment) + (counter.querySelector('.stat-number').innerText.includes('+') ? '+' : '');
                            setTimeout(updateCount, 10);
                        } else {
                            counter.querySelector('.stat-number').innerText = target + (counter.querySelector('.stat-number').innerText.includes('+') ? '+' : '');
                        }
                    };
                    updateCount();
                });
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounters();
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });

            document.querySelectorAll('.stats').forEach(stat => {
                observer.observe(stat);
            });

            // Form submissions
            const forms = [
                { id: 'contact-form', spinner: 'form-spinner', message: 'form-message' },
                { id: 'newsletter-form', spinner: 'newsletter-spinner', message: 'newsletter-message' },
                { id: 'login-form', spinner: 'login-spinner', message: 'login-message' },
                { id: 'sos-form', spinner: 'sos-spinner', message: 'sos-message' },
                { id: 'medicine-upload-form', spinner: 'medicine-upload-spinner', message: 'medicine-upload-message' }
            ];

            forms.forEach(form => {
                const formElement = document.getElementById(form.id);
                if (formElement) {
                    formElement.addEventListener('submit', (e) => {
                        e.preventDefault();
                        const spinner = document.getElementById(form.spinner);
                        const message = document.getElementById(form.message);
                        spinner.style.display = 'block';
                        message.textContent = '';

                        setTimeout(() => {
                            spinner.style.display = 'none';
                            message.textContent = 'Submission successful!';
                            message.style.color = 'green';
                            formElement.reset();
                            if (form.id === 'medicine-upload-form') {
                                document.getElementById('medicine-upload-modal').style.display = 'none';
                            }
                        }, 1000);
                    });
                }
            });

            // Profile panel toggle
            const profileIcon = document.getElementById('profile-icon');
            const profilePanel = document.getElementById('profile-panel');
            profileIcon.addEventListener('click', (e) => {
                e.stopPropagation();
                profilePanel.classList.toggle('active');
            });

            window.addEventListener('click', () => {
                profilePanel.classList.remove('active');
            });

            profilePanel.addEventListener('click', (e) => {
                e.stopPropagation();
            });

            // Medicine upload modal
            const medicineUploadBox = document.getElementById('medicine-upload');
            const medicineUploadModal = document.getElementById('medicine-upload-modal');
            const closeModal = document.querySelector('.close-modal');

            medicineUploadBox.addEventListener('click', () => {
                medicineUploadModal.style.display = 'flex';
            });

            closeModal.addEventListener('click', () => {
                medicineUploadModal.style.display = 'none';
            });

            window.addEventListener('click', (e) => {
                if (e.target === medicineUploadModal) {
                    medicineUploadModal.style.display = 'none';
                }
            });

            // Medicines available toggle
            const medicinesAvailableBox = document.getElementById('medicines-available');
            const medicinesGrid = document.getElementById('medicines-grid');

            medicinesAvailableBox.addEventListener('click', () => {
                medicinesGrid.style.display = medicinesGrid.style.display === 'none' ? 'grid' : 'none';
                
                if (medicinesGrid.style.display === 'grid' && medicinesGrid.children.length === 0) {
                    availableMedicines.forEach(medicine => {
                        const medicineCard = document.createElement('div');
                        medicineCard.className = 'medicine-card';
                        medicineCard.innerHTML = `
                            <h4>${medicine.name}</h4>
                            <p>Quantity: ${medicine.quantity}</p>
                            <p>Expiry: ${medicine.expiry}</p>
                            <p>Location: ${medicine.location}</p>
                            <p>${medicine.description}</p>
                        `;
                        medicinesGrid.appendChild(medicineCard);
                    });
                }
            });

            // SOS form toggle
            const sosBox = document.getElementById('emergency-sos');
            const sosForm = document.getElementById('sos-form');
            sosBox.addEventListener('click', () => {
                sosForm.classList.toggle('active');
            });

            // Gallery items toggle
            const galleryItems = [
                { id: 'collection-item', infoId: 'collection-info' },
                { id: 'sorting-item', infoId: 'sorting-info' },
                { id: 'redistribution-item', infoId: 'redistribution-info' }
            ];

            galleryItems.forEach(item => {
                const element = document.getElementById(item.id);
                const info = document.getElementById(item.infoId);
                element.addEventListener('click', () => {
                    info.classList.toggle('active');
                });
            });

            // Article cards animation
            const articleCards = document.querySelectorAll('.article-card');
            const articleObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.animation = 'fadeIn 1s ease-in';
                    }
                });
            }, { threshold: 0.3 });

            articleCards.forEach(card => {
                articleObserver.observe(card);
            });

            // Testimonial cards click to expand
            const testimonialCards = document.querySelectorAll('.testimonial-card');
            testimonialCards.forEach(card => {
                card.addEventListener('click', () => {
                    const extraInfo = card.querySelector('p:nth-child(2)');
                    extraInfo.style.display = extraInfo.style.display === 'none' ? 'block' : 'none';
                });
            });
        });
    </script>
</body>
</html>
